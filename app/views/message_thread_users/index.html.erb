<p id="notice"><%= notice %></p>

<h1>Listing Message Thread Users</h1>

<table>
  <thead>
    <tr>
      <th>Message thread</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_thread_users.each do |message_thread_user| %>
      <tr>
        <td><%= message_thread_user.message_thread %></td>
        <td><%= message_thread_user.user %></td>
        <td><%= link_to 'Show', message_thread_user %></td>
        <td><%= link_to 'Edit', edit_message_thread_user_path(message_thread_user) %></td>
        <td><%= link_to 'Destroy', message_thread_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

